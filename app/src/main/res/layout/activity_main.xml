<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify_app_launch_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:onClick="sendSpotifyToast"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:id="@+id/title_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUPER DUO"
        android:id="@+id/super_duo_app_launch_button"
        android:layout_above="@+id/build_it_bigger_app_launch_button"
        android:layout_marginBottom="17dp"
        android:layout_alignRight="@+id/spotify_app_launch_button"
        android:layout_alignLeft="@+id/spotify_app_launch_button"
        android:onClick="sendSuperDuoToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/build_it_bigger_app_launch_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/super_duo_app_launch_button"
        android:layout_alignRight="@+id/super_duo_app_launch_button"
        android:onClick="sendBuildItBiggerToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyz_reader_app_launch_button"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/build_it_bigger_app_launch_button"
        android:layout_alignLeft="@+id/build_it_bigger_app_launch_button"
        android:layout_alignRight="@+id/build_it_bigger_app_launch_button"
        android:onClick="sendXYZReaderToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/capstone_app_launch_button"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/xyz_reader_app_launch_button"
        android:layout_alignLeft="@+id/xyz_reader_app_launch_button"
        android:layout_alignRight="@+id/xyz_reader_app_launch_button"
        android:onClick="sendCapstoneToast"/>
</RelativeLayout>
